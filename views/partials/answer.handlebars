<div class="d-flex flex-column align-items-center mt-3">
    {{#each this}}
    <div class="answer card mt-2" style="width: 30rem;">
        <div class="card-body">
            <h6 class="card-subtitle mb-2 text-muted text-center">{{parent_username}} answered on {{moment created_at
                format="ddd MM/DD/YYYY hh:mm a"}}</h6>
            <p class="card-text text-center"> {{answer_text}}</p>
            {{vote_count}} {{format_plural "point" vote_count}}
        </div>
        <div class="text-center pb-1">
            <button type="button" class="answer-vote-btn btn btn-success w-25" data-answerId={{id}}>vote</button>
        </div>
    </div>
    {{/each}}
</div>

{{!-- Modal --}}
<div class="modal fade" id="myAnswerModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Vote Duplicate</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">Great answer right! Only one per account though</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>