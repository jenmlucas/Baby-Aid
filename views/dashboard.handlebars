<section>
    <h2>Create New Question</h2>

    <form id="new-question-form">
        <div>
            <label for="question-title">Title</label>
            <input type="text" id="question-title" name="question-title" />
        </div>
        <div>
            <label for="question-content">Content</label>
            <input id="question-content" name="question-content" />
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{#if questions.length}}
<section>
    <h2>Your Questions</h2>
    <div>
        {{#each questions as |question|}}
        <div>
            {{> question-info question}}
            <a href="/dashboard/edit/{{question.id}}">Edit Question</a>
        </div>
        {{/each}}
    </div>
</section>
{{/if}}

<script src="/javascript/add-question.js"></script>